<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.lnsel.com.messengerplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".helpers.VolleyLibrary.AppController"
        android:allowBackup="true"
        android:icon="@drawable/user_chat_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".views.SplashScreen.SplashActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/NoActionBarTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.LoginScreen.LoginActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:noHistory="false"/>
        <activity
            android:name=".views.SignupScreen.SignupActivity"
            android:theme="@style/NoActionBarTheme"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:noHistory="false"/>
        <activity
            android:name=".views.Dashboard.MainScreen.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            android:noHistory="false"/>

    </application>

</manifest>
